<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Accounts</title>
</head>

<body>
    <div class="container mt-5">
        <div class="accounts">
            <div style="text-align: center;" class="title mx-auto mb-4">
                <h2 class="mb-4" style="text-align: center;">Good Day, <%= customer.fullName %></h2>
            </div>

            <table class="table table-striped middle">
                <thead>
                    <tr style="text-align: center;">
                        <th class="align-middle">Account Number</th>
                        <th class="align-middle">Type</th>
                        <th class="align-middle">Balance</th>
                        <th class="align-middle">Action</th>
                    </tr>
                </thead>
            
                <tbody>
                    <% customer.Accounts.forEach(account => { %>
                                
                    <tr style="text-align: center;">
                        <td class="align-middle">
                            <%= account.accountNumber %>
                        </td>
                        <td class="align-middle">
                            <%= account.type %>
                        </td>
                        <td class="align-middle">
                            <%= new Number(account.balance).toLocaleString('en-ID', {style: 'currency', currency: 'IDR'}) %>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" href="/customers/<%= customer.id %>/accounts/<%= account.id %>/transfer" role="button">Transfer</a>
                        </td>
                    </tr>
            
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="add-account mx-automx mt-5">
            <div style="text-align: center;" class="title mx-auto mb-4">
                <h2 class="mb-4" style="text-align: center;">ADD ACCOUNT</h2>
            </div>
        
            <form action="#" method="POST">
                <label class="mb-2" for="">Account Type</label>
                <div class="input-group mb-3">
                    <select name="type" class="form-control">
                        <option selected disabled>-- Select --</option>
                        <option>On Account</option>
                        <option>Xtra Payroll</option>
                        <option>Tabunganku</option>
                    </select>
                </div> 

                <label class="mb-2" for="">Balance</label><span style="float: right; color: red"><%= error.balance %></span>
                <div class="input-group mb-4">
                    <input name="balance" type="number" class="form-control" placeholder="0">
                </div>

                <div class="d-grid gap-2 mx-auto">
                    <button style="width: 100%" class="btn btn-primary">SAVE</button>
                    <a style="width: 100%" href="/customers" class="btn btn-info btn-danger"
                        role="button">CANCEL</a>
                </div>
            </form>
        </div>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

