<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <style>
        body {
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
        }
    </style>

    <title>Transfer</title>
</head>

<body>

    <div class="container mx-automx mt-5">    
        <form action="/customers/<%= customer_id %>/accounts/<%= account_id %>/transfer" method="POST">
            <table style="width: 100%">
                <tr style="text-align: left;">
                    <td class="align-middle">Transfer From</td>
                    <td class="align-middle">:</td>
                    <td class="align-middle" style="width: 641px;">
                        <strong>
                            <%= myAccount.accountNumber %> <%= myAccount.type %> <%= new Number(myAccount.balance).toLocaleString('en-ID', {style: 'currency', currency: 'IDR'}) %>     
                        </strong>
                        <span style="float: right; color: red"><%= error %></span>
                    </td>
                </tr>
                <tr style="text-align: left;">
                    <td class="align-middle">Amount</td>
                    <td class="align-middle">:</td>
                    <td class="align-middle">
                        <div class="input-group input-group-sm">
                            <input name="amount" type="number" class="form-control" placeholder="0">
                        </div>
                    </td>
                    <td style="padding-left: 20px; " class="align-middle" rowspan="3">
                        <div class="d-grid gap-2 mx-auto">
                            <button style="width: 100%; height: 65px;" class="btn btn-primary btn-sm">TRANSFER</button>
                        </div>
                    </td>
                    <td style="padding-left: 20px; " class="align-middle" rowspan="3">
                        <div class="d-grid gap-2 mx-auto">
                            <a style="width: 100%; height: 65px; line-height: 53px;" href="/customers/<%= customer_id %>/accounts" class="btn btn-danger">CANCEL</a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="align-middle">Transfer To</td>
                    <td>:</td>
                    <td>
                        <div class="input-group input-group-sm">
                            <select name="accountNumber" class="form-control">
                                <!-- <option selected disabled>-- Select Account --</option> -->
                                <% accounts.forEach(account => { %> 
                                
                                <option value="<%= account.accountNumber %>"><%= account.accountNumber %> - <%= account.Customer.fullName %></option>

                                <% }) %>
                            </select>
                        </div>
                    </td>
                </tr>
            </table>     
        </form>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
